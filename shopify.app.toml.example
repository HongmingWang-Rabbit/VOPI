# Shopify App Configuration (Development)
# Copy this file to shopify.app.toml and fill in your actual values
# Learn more at https://shopify.dev/docs/apps/tools/cli/configuration

# REPLACE WITH YOUR SHOPIFY APP CLIENT ID
client_id = "your-shopify-client-id-here"

name = "VOPI Dev"
application_url = "http://localhost:3000"
embedded = true

[build]
automatically_update_urls_on_dev = true
include_config_on_deploy = true

[webhooks]
api_version = "2026-04"

[access_scopes]
# Learn more at https://shopify.dev/docs/apps/tools/cli/configuration#access_scopes
scopes = "read_products,write_products"

[auth]
redirect_urls = [ "http://localhost:3000/api/v1/oauth/shopify/callback" ]
